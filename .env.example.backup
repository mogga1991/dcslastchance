# =================================================================
# âœ… REQUIRED - Database
# =================================================================
# PostgreSQL connection string from Neon
# Get this from: https://console.neon.tech
# Example: postgresql://user:password@host/database?sslmode=require

DATABASE_URL="postgresql://user:password@host/database?sslmode=require"

# =================================================================
# âœ… REQUIRED - Authentication (Supabase)
# =================================================================
# Supabase project credentials for user authentication
# Get these from: https://supabase.com/dashboard/project/_/settings/api
#
# PUBLIC - Safe to expose in browser (client-side auth)
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."

# SERVER ONLY - Never expose in browser (admin operations)
SUPABASE_SERVICE_ROLE_KEY="eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."

# =================================================================
# âœ… REQUIRED - Application Settings
# =================================================================
# Your application URL
# Development: http://localhost:3000
# Production: https://your-domain.com

NEXT_PUBLIC_APP_URL="http://localhost:3000"

# =================================================================
# âœ… REQUIRED - Government Data APIs
# =================================================================
# SAM.gov API for federal contract opportunities
# Get your key from: https://open.gsa.gov/api/get-opportunities-public-api/
# Free tier available, no credit card required
# Note: Used extensively in GSA Leasing feature

SAM_API_KEY="your-sam-api-key-here"

# =================================================================
# âœ… REQUIRED - Maps & Geolocation
# =================================================================
# Google Maps API for property mapping and geocoding
# Get your key from: https://console.cloud.google.com/google/maps-apis
# Required APIs to enable:
#   - Maps JavaScript API
#   - Geocoding API
#   - Places API (optional, for autocomplete)
# PUBLIC - Exposed in browser, restrict by domain/IP in Google Console

NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="AIzaSy..."

# =================================================================
# ðŸ“¦ OPTIONAL - OAuth Providers (Social Login)
# =================================================================
# Google OAuth for "Sign in with Google" functionality
# Get these from: https://console.cloud.google.com/apis/credentials
# Currently: OAuth is hidden in UI, so these are optional
# Leave empty to disable Google sign-in

GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# =================================================================
# ðŸ“¦ OPTIONAL - Cron Jobs & Automation
# =================================================================
# Secret for authenticating automated cron job requests
# Generate a random string (min 32 characters)
# Example: openssl rand -base64 32
# Used by: /api/cron/sync-opportunities
# Leave empty if not using automated data sync

CRON_SECRET=""

# =================================================================
# ðŸ”§ DEV ONLY - Local Development
# =================================================================
# Supabase CLI access token for local development
# Get this from: supabase login (then check ~/.supabase/access-token)
# Only needed if using Supabase CLI for migrations/dev
# Optional for production

SUPABASE_ACCESS_TOKEN=""

# Node environment (automatically set by hosting providers)
# Options: development | production | test
# Leave empty - will default to "development"

NODE_ENV="development"

# =================================================================
# ðŸ’° REVENUE - Payment & Subscription (Polar.sh)
# =================================================================
# Polar.sh credentials for paid subscriptions
# Get these from: https://polar.sh/dashboard
# NOT REQUIRED FOR MVP - App works fine on free tier
# Only needed if you want to charge users for subscriptions
#
# Set to "placeholder" to prevent errors in Settings page

POLAR_ACCESS_TOKEN="placeholder"
POLAR_WEBHOOK_SECRET="placeholder"
POLAR_SUCCESS_URL="success"

# Polar.sh product configuration
# PUBLIC - Product IDs visible in checkout URLs
# Create products in Polar.sh dashboard first

NEXT_PUBLIC_STARTER_TIER="placeholder-tier"
NEXT_PUBLIC_STARTER_SLUG="placeholder-slug"
NEXT_PUBLIC_PRO_TIER="placeholder-tier"
NEXT_PUBLIC_PRO_SLUG="placeholder-slug"

# =================================================================
# ðŸ“Š ANALYTICS & MONITORING (All Optional)
# =================================================================
